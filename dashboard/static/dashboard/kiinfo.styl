//out: kiinfo.css

@import './res/*'

.mainframe__kiinfo
  margin 4.5em 10vw 0em 10vw
  textarea
    resize none
    outline none
    border 1px solid accent
    padding 1em
    border-radius 2px

.kiinfo__headline
  color base
  font-family SFProHeavy
  font-size 3em
  display block
  width 100%
  border-bottom 1px solid rgba(base, 1)

.kiinfo__subline
  color base
  font-family SFProHeavy
  font-size 1.5em
  display block
  width 100%
  margin .5em 0em

.kiinfo__infobox
  width 100%
  display flex
  flex-direction row
  justify-content space-between
  margin 2em 0em

.kiinfo__entwnotes
  display grid
  grid-column-gap 1.5em
  grid-template-columns 50% 50%
  grid-template-rows 20em 3em

.entwnotes__form
  textarea
    grid-column 1
    grid-row 1
    width 100%
    min-height 20em

.form__action
  grid-row 2
  grid-column 1
  width 100%
  display flex
  justify-content flex-end
  margin-top 1em

.entwnotes__notes
  grid-column 2
  grid-row 1 span 2
  overflow-y scroll

.entwnotes__notes--left
  grid-column 1 / 3
  justify-self start
  width 50%

.notes__note
  padding 1em
  width 100%
  border 1px solid accentLight
  &:not(:last-child)
    margin-bottom 0.6em
.note__wrap
  display flex
  flex-direction row
  justify-content space-between
  align-items flex-end
  margin-bottom 1em
  >div
    display flex
    flex-direction row
    align-items flex-end
    *
      &:last-child
        margin-left 1em
        font-size 0.8em
        lightness(black, 25%)

.note__type
  padding 0.2em 0.4em
  color accent
  background-color accentLight
  border 1px solid accent
  border-radius 2px
  margin 0em 1em
  font-size 0.6em

.wrap__left
  justify-content flex-start
