//out: news-detail.css

@import './res/*'

body
  background-color lightness(base, 98%)

.mainframe__detail
  margin 4.5em 10vw 0em 10vw

.detail__headline
  color base
  font-family SFProHeavy
  font-size 3em
  display block
  width 100%
  border-bottom 1px solid rgba(base, 1)

.detail__detailHeader
  display flex
  flex-direction row
  align-items flex-end
  margin 2em 0em 1em 0em

.detailHeader__name
  font-family SFProSemibold
  color lightness(black, 25%)
  margin-right 2.5em

.detailHeader__date
  font-size 0.8em
  color lightness(black, 25%)

.detail__contentmessage
  display flex
  flex-direction column
  padding 0.4em 1.3em
  border-radius 2px
  background-color rgba(white, 0.7)
  box-shadow 0em 1em 2em rgba(black, 0.07)
  transition .2s
  &:hover
    cursor pointer
  p
    &:first-child
      font-weight bolder
    &:not(:last-child)
      margin-bottom 1em

.detail__votesection
  padding 0
  margin 1em 0em
  grid-area votes
  width 100%
  display flex
  flex-direction row
  justify-content flex-start

.votesection__child
  display flex
  flex-direction row

.dashboard__newsfeed
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-starte
  padding-top 1.5em
  position relative

.votesection__child
  display flex
  flex-direction row

.votesection__child
  background-color rgba(black, 0.05)
  margin-right 1em
  padding 0.3em 0.6em
  border-radius 2px
  &:hover
    cursor pointer
    &:first-child
      background-color accentLight
      *
        color accent
    &:last-child
      background-color rgba(danger, 0.2)
      *
        color danger
  *
    margin 0em 0.15em

.detail__comment
  width 100%
  margin-top 2em

.comment__header
  color lightness(black, 25%)
  font-family SFProRegular
  margin 0.5em 0em

.comment__content
  p
    line-height 2em

.comment__wrapper
  padding 0.5em 1em
  margin 0.5em 0em
  &:nth-child(odd)
    background-color lightness(black, 97%)

.form__message
  resize none
  min-height 25vh
  margin-bottom 1em

.form__message
  font-size 0.9rem
  padding 1em
  width 100%
  border 1px solid accent
  border-radius 2px
  box-shadow 0em 1em 2em rgba(accentLight, 0.05)

.detail__addComment
  margin-bottom 3em
