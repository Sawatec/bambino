//out: dashboard.css

@import './res/*'

body
  background-color lightness(base, 98%)

.mainframe__dashboard
  margin 4.5em 10vw 0em 10vw
  display grid
  grid-template-columns 100%
  grid-template-rows 5em

.dashboard__headline
  color base
  font-family SFProHeavy
  font-size 3em
  display block
  width 100%
  border-bottom 1px solid rgba(base, 1)

.dashboard__newsfeed
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-starte
  padding-top 1.5em
  position relative

.newsfeed__news
  background-color white
  width 100%
  display grid
  border-radius 3px
  box-shadow 0em 1em 2em rgba(base, 0.1)
  grid-template-columns 70% 30%
  grid-template-rows 3em minmax(3em, min-content) 1em
  grid-template-areas: "title author" "content content" "date votes";
  padding 1em
  grid-row-gap 1em
  align-items center
  margin-bottom 2em

.news__title
  grid-area title
  font-family SFProSemibold
  font-size 1.5em
  color accent

.news__votesection
  grid-area votes
  width 100%
  display flex
  flex-direction row
  justify-content flex-end

.votesection__child
  display flex
  flex-direction row

.news__date
  grid-area date
  font-size 0.75em

.news__user
  grid-area author
  display flex
  flex-direction row
  justify-content flex-end
  align-items flex-end
  font-family SFProSemiBold
  &:hover
    cursor pointer
    color accent

.user__pre
  margin-right 0.25em
  font-size 0.8em
  color lightness(base, 50%)

.news__content
  grid-area content
  display flex
  flex-direction column
  padding 1.5em 1em
  border-radius 2px
  background-color rgba(black, 0.02)
  transition .2s
  &:hover
    cursor pointer
  p
    &:first-child
      font-weight bolder
    &:not(:last-child)
      margin-bottom 1em

.votesection__child
  margin 0em 1em
  padding 0.3em 0.6em
  border-radius 2px
  &:hover
    cursor pointer
    &:first-child
      background-color accentLight
      *
        color accent
    &:last-child
      background-color rgba(danger, 0.2)
      *
        color danger
  *
    margin 0em 0.15em

.dashboard__adder
  position absolute
  right 0
  top -3em
