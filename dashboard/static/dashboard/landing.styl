//out: landing.css

@import './res/*'

body
  padding 0
  margin 0

*
  box-sizing border-box

.navigation__landing
  width 100vw
  margin 0
  justify-content flex-end
  height 3em
  align-items center
  margin 0
  display flex
  padding 0em 2em 0em 10vw
  background-color white

.navigation__element
  text-decoration none
  color lightness(black, 25%)

.landing__mainframe
  width 100vw
  height calc(100vh - 3em)
  padding 0
  margin 0
  background-image url(images/heroimage.jpg)
  background-size cover
  background-position center
  display flex
  flex-direction column
  justify-content center
  align-items center
  position relative
  &:before
    content ''
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background-color rgba(black,0.5)
    z-index 0

.mainframe__text
  width 70vw
  position relative
  z-index 10

.mainframe__header
  font-size 4rem
  color white
  text-shadow 0em 0em 3em black
  font-family SFProHeavy
  text-align center

.mainframe__subheader
  font-size 1.2rem
  color lightness(black, 90%)
  font-family SFProSemibold
  line-height @font-size * 2

.mainframe__link
  font-size 1rem
  color white
  font-family SFProSemibold
  position relative
  text-decoration none
  &:before
    content ''
    width 100%
    transform scaleX(0)
    height 3px
    position absolute
    bottom -0.2rem
    left 0
    background-color accent
    transition .4s
  &:hover
    &:before
      transform scaleX(1)
